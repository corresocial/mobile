{
	"extends": [
		"airbnb"
	],
	"plugins": [
		"@typescript-eslint",
		"react",
		"react-native",
		"import-helpers"
	],
	"parser": "@typescript-eslint/parser",
	"ignorePatterns": [
		"assets/**/**",
		"services/firebase/index.ts",
		"ignoredLogs.ts",
		"*.d.ts",
		"*.json",
		"*.svg",
		"*.sql"
	],
	"rules": {
		"import/no-unresolved": 0,
		"import/no-default-export": "error",
		"import/prefer-default-export": "off",
		"import/extensions": "off",
		"import/no-extraneous-dependencies": [ // TODO config
			"off",
			{
				"devDependencies": true,
				"optionalDependencies": false,
				"peerDependencies": false,
				"bundledDependencies": false,
				"packageDir": [
					"./",
					"./services/firebase"
				]
			}
		],
		"import/order": [
			"off",
			{
				"groups": [
					"index",
					"sibling",
					"parent",
					"internal",
					"external",
					"builtin",
					"object",
					"type"
				]
			}
		],
		"import-helpers/order-imports": [
			"warn",
			{
				"newlinesBetween": "always",
				"groups": [
					[
						"/^react/",
						"/^@react/",
						"/^@expo/",
						"/^expo/",
						"/^styled-components/"
					],
					[
						"module"
					],
					[
						"/^@domain/"
					],
					[
						"/^@data/"
					],
					[
						"/^@contexts/"
					],
					[
						"/^@routes/",
						"/^@types/",
						"/types/",
						"/^@contexts/types/"
					],
					[
						"/^@services/"
					],
					[
						"/^@presentation/common/screenDimensions/",
						"/^@presentation/common/theme/",
						"/^@presentation/assets/",
						"/^./styles/"
					],
					[
						"/^@presentation/adapters/"
					],
					[
						"/^@presentation/components/",
						"/^@presentation/screens/"
					]
				],
				"alphabetize": {
					"order": "asc",
					"ignoreCase": true
				}
			}
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".jsx",
					".tsx",
					".ts"
				]
			}
		],
		"linebreak-style": "off",
		"no-trailing-spaces": "off",
		"no-multiple-empty-lines": "warn",
		"max-len": "off",
		"no-multi-spaces": "warn",
		"key-spacing": "warn",
		"semi": [
			"warn",
			"never"
		],
		"quotes": [
			"warn",
			"single"
		],
		"jsx-quotes": [
			"error",
			"prefer-single"
		],
		"react/jsx-curly-brace-presence": [
			"error",
			{
				"props": "always",
				"children": "always"
			}
		],
		"react/jsx-no-useless-fragment": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"no-unused-vars": [
			"warn",
			{
				"args": "none",
				"caughtErrors": "none"
			}
		],
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true,
				"allowTernary": true
			}
		],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"object-curly-spacing": "warn",
		"object-curly-newline": "off",
		"arrow-body-style": "off",
		/* [
			"error",
			{
				"ObjectExpression": "never",
				"ObjectPattern": {
					"multiline": true,
					"minProperties": 5
				},
				"ImportDeclaration": {
					"multiline": true,
					"minProperties": 5
				},
				"ExportDeclaration": {
					"multiline": true,
					"minProperties": 5
				}
			}
		] */
		"dot-notation": "off",
		"eqeqeq": [
			"error",
			"always"
		],
		"camelcase": [
			"error",
			{
				"allow": [
					"Arvo_400Regular",
					"Arvo_700Bold"
				]
			}
		],
		"react/self-closing-comp": "off",
		"default-case": "off",
		"no-tabs": "off",
		"no-console": "off",
		"eol-last": "off",
		"react/jsx-tag-spacing": "off",
		"comma-dangle": "off",
		"no-use-before-define": "off",
		"radix": "off",
		"react/jsx-no-bind": "off",
		"react/state-in-constructor": "off",
		"consistent-return": "off",
		"react/jsx-no-constructed-context-values": "off",
		"react/require-default-props": "off",
		"no-nested-ternary": "off", // Fix
		"react/no-unstable-nested-components": "off", // Exclude this row
		"react/jsx-props-no-spreading": "off" // Exclude this row
	}
}